@model NGnono.FMNote.WebSite4App.Core.Models.DTO.Account.IndexDTO

@{
    ViewBag.Title = String.Format("{0} Account", Model.ShowName);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Header {
    @Html.ActionLink("Back", "Index", "Home", null, new { data_icon = "arrow-l", data_rel = "back" })
    <h1>@ViewBag.Title</h1>
}

<p>
    Logged in as <strong>@this.Model.ShowName</strong>.
</p>

<ul data-role="listview" data-inset="true">
    <li>@Html.ActionLink("Change password", "ChangePassword")</li>
    <li>@Html.ActionLink("Log off", "LogOff")</li>
</ul>
